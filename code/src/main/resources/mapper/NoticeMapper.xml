<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xwc.teach.index.dao.NoticeDao" >
    <insert id="noticeAdd">
        insert into notice(title,index)
        values(#{title},#{index})
    </insert>
    <update id="noticeUpd">
        update notice
        set title = #{title},
        index = #{index}
        where id = #{id}
    </update>
    <delete id="noticeDel">
        delete from notice where id = #{id}
    </delete>

    <select id="selectAll" resultType="com.xwc.teach.index.entity.Notice">
      select * from notice
    </select>
    <select id="noticeInfo" resultType="com.xwc.teach.index.entity.Notice">
        select * from notice where id = #{id}
    </select>


</mapper>
